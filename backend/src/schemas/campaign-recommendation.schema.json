{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Campaign Recommendation",
  "description": "JSON Schema for validating campaign recommendation payloads generated by the Decision Engine",
  "type": "object",
  "required": ["id", "timestamp", "audience", "reasoning", "channel_plan", "campaign_meta"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the campaign recommendation",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "description": "ISO8601 timestamp when the recommendation was generated",
      "format": "date-time"
    },
    "audience": {
      "type": "object",
      "description": "Target audience segment information",
      "required": ["segment_id", "name", "filters"],
      "properties": {
        "segment_id": {
          "type": "string",
          "description": "Unique identifier for the audience segment",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "description": "Human-readable name for the audience segment",
          "minLength": 1
        },
        "filters": {
          "type": "object",
          "description": "Filters and criteria defining the audience segment",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "reasoning": {
      "type": "object",
      "description": "Explanation and scoring for the recommendation",
      "required": ["signals", "score", "explain"],
      "properties": {
        "signals": {
          "type": "array",
          "description": "Array of signal descriptions that contributed to the decision",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        },
        "score": {
          "type": "number",
          "description": "Confidence score for the recommendation (0.0 to 1.0)",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "explain": {
          "type": "string",
          "description": "Human-readable explanation of the recommendation logic",
          "minLength": 1
        }
      },
      "additionalProperties": false
    },
    "channel_plan": {
      "type": "array",
      "description": "Ordered list of channel-specific campaign plans",
      "items": {
        "type": "object",
        "required": ["channel", "send_at", "priority", "payload", "delivery_instructions"],
        "properties": {
          "channel": {
            "type": "string",
            "description": "Communication channel for the campaign",
            "enum": ["Email", "Push", "WhatsApp", "Ads", "SMS", "Messenger", "Voice"]
          },
          "send_at": {
            "type": "string",
            "description": "ISO8601 timestamp when to send the campaign",
            "format": "date-time"
          },
          "priority": {
            "type": "integer",
            "description": "Priority of this channel (1 = highest priority)",
            "minimum": 1
          },
          "payload": {
            "type": "object",
            "description": "Channel-specific message payload",
            "required": ["body", "cta", "metadata"],
            "properties": {
              "subject": {
                "type": "string",
                "description": "Subject line (for Email, Push notifications)"
              },
              "title": {
                "type": "string",
                "description": "Title/heading for the message"
              },
              "body": {
                "type": "string",
                "description": "Main message content",
                "minLength": 1
              },
              "cta": {
                "type": "object",
                "description": "Call-to-action configuration",
                "additionalProperties": true
              },
              "metadata": {
                "type": "object",
                "description": "Additional metadata for the payload",
                "additionalProperties": true
              }
            },
            "additionalProperties": false
          },
          "delivery_instructions": {
            "type": "object",
            "description": "Delivery configuration and retry policies",
            "required": ["retry_policy", "timeout_sec"],
            "properties": {
              "retry_policy": {
                "type": "string",
                "description": "Retry policy for failed deliveries",
                "minLength": 1
              },
              "timeout_sec": {
                "type": "integer",
                "description": "Timeout in seconds for delivery attempts",
                "minimum": 1
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "campaign_meta": {
      "type": "object",
      "description": "Metadata about the campaign generation process",
      "required": ["source_snapshot", "engine_version", "confidence"],
      "properties": {
        "source_snapshot": {
          "type": "object",
          "description": "Snapshot of data sources used in the decision",
          "additionalProperties": true
        },
        "engine_version": {
          "type": "string",
          "description": "Version of the decision engine that generated this recommendation",
          "minLength": 1
        },
        "confidence": {
          "type": "number",
          "description": "Overall confidence in the recommendation (0.0 to 1.0)",
          "minimum": 0.0,
          "maximum": 1.0
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}